---
import Icon from "../block/Icon.astro";
import { footerBlockOSData } from "./footer-blockos";
import "@/styles/global.css";

interface Props {}

const { } = Astro.props;

const currentYear = new Date().getFullYear();
const copyrightText = footerBlockOSData.copyright || `Â© ${currentYear} ${footerBlockOSData.companyName}. All rights reserved.`;
---

<footer class="site-footer variant-default">
  <div class="container mx-auto px-6">
    <div class="footer-main">
      <div class="footer-brand-section">
        {footerBlockOSData.logo && (
          <div class="footer-logo">
            <img src={footerBlockOSData.logo} alt="" />
          </div>
        )}
        <div>
          <h3 class="company-name">{footerBlockOSData.companyName}</h3>
          <p class="company-description">{footerBlockOSData.description}</p>
        </div>
      </div>
      
      {footerBlockOSData.sections.length > 0 && (
        <div class="footer-sections">
          {footerBlockOSData.sections.map((section) => (
            <div class="footer-section">
              <h4 class="section-title">{section.title}</h4>
              <ul class={`section-links ${(section.title === 'Brands' || section.title === 'Social') ? 'horizontal' : ''}`}>
                {section.links.map((link) => (
                  <li>
                    <a 
                      href={link.href}
                      {...(link.external && { target: '_blank', rel: 'noopener noreferrer' })}
                      class="footer-link"
                    >
                      {link.icon && (
                        <Icon name={link.icon} class="footer-link-icon" />
                      )}
                      <span>{link.title}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      )}
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-separator"></div>
      <div class="footer-bottom-content">
        <div class="copyright">
          {copyrightText}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: hsl(var(--background));
    border-top: 1px solid hsl(var(--border));
    margin-top: auto;
  }
  
  .site-footer.variant-default {
    padding: 4rem 0 2rem;
  }
  
  /* Main Footer Content */
  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }
  
  /* Company Section */
  .footer-brand-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .footer-logo img {
    height: 2rem;
    width: auto;
  }
  
  .company-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0;
  }
  
  .company-description {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    line-height: 1.5;
    margin: 0;
  }
  
  /* Navigation Sections */
  .footer-sections {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
  }
  
  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .section-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0;
  }
  
  .section-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .section-links.horizontal {
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
  }
  
  .footer-link {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    text-decoration: none;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .footer-link:hover {
    color: hsl(var(--foreground));
  }
  
  .footer-link-icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }
  
  /* For horizontal sections, show only icons on larger screens */
  .section-links.horizontal .footer-link span {
    display: inline;
  }
  
  @media (min-width: 768px) {
    .section-links.horizontal .footer-link span {
      display: none;
    }
    
    .section-links.horizontal .footer-link {
      padding: 0.5rem;
      border-radius: 0.375rem;
      transition: background-color 0.2s ease, color 0.2s ease;
    }
    
    .section-links.horizontal .footer-link:hover {
      background-color: hsl(var(--muted) / 0.1);
    }
  }
  
  /* Footer Bottom */
  .footer-bottom {
    margin-top: 2rem;
  }
  
  .footer-separator {
    height: 1px;
    background: hsl(var(--border));
    margin-bottom: 2rem;
  }
  
  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  
  .copyright {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .footer-sections {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .site-footer.variant-default {
      padding: 3rem 0 1.5rem;
    }
    
    .footer-main {
      gap: 2rem;
      margin-bottom: 2rem;
    }
    
    .footer-sections {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }
    
    .section-links.horizontal {
      flex-direction: column;
      gap: 0.75rem;
      align-items: flex-start;
    }
  }
  
  @media (max-width: 640px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
    
    .footer-brand-section {
      text-align: center;
    }
  }
</style>