---
import ThemeToggle from "@/components/ThemeToggle.astro";
import MobileNav from "@/components/docs/MobileNav.astro";
import { getUrlRelativeToBase } from "@/lib/utils";

const currentPath = Astro.url.pathname;

// Navigation items configuration
const navigationItems = [
  {
    title: "Documentation",
    href: "/docs",
    description: "Complete guides and API reference"
  },
  {
    title: "Components", 
    href: "/components",
    description: "Reusable UI components and layouts"
  },
  {
    title: "Examples",
    href: "/examples",
    description: "Real-world implementation examples"
  },
  {
    title: "Blog",
    href: "/blog", 
    description: "Latest updates and tutorials"
  }
];

// Check if current path matches navigation item
function isActive(href: string, currentPath: string): boolean {
  if (href === '/docs' && currentPath.startsWith(getUrlRelativeToBase('/docs'))) {
    return true;
  }
  if (href === '/components' && currentPath.startsWith(getUrlRelativeToBase('/components'))) {
    return true;
  }
  if (href === '/blog' && currentPath.startsWith(getUrlRelativeToBase('/blog'))) {
    return true;
  }
  if (href === '/examples' && currentPath.startsWith(getUrlRelativeToBase('/examples'))) {
    return true;
  }
  return false;
}
---

<header class="header-wrapper">
  <div class="header-container">
    <!-- Left Section: Logo + Navigation -->
    <div class="header-left">
      <MobileNav currentPath={currentPath} />
      
      <!-- Logo/Brand -->
      <a href="/" class="brand-link">
        <div class="brand-content">
          <div class="brand-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 6V4C4 2.89543 4.89543 2 6 2H18C19.1046 2 20 2.89543 20 4V6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M4 6H20V18C20 19.1046 19.1046 20 18 20H6C4.89543 20 4 19.1046 4 18V6Z" stroke="currentColor" stroke-width="2"/>
              <path d="M8 10H16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M8 14H13" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <circle cx="16" cy="8" r="2" fill="currentColor"/>
            </svg>
          </div>
          <span class="brand-text">Docs Kickstarter</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="desktop-nav">
        {navigationItems.map((item) => (
          <a
            href={getUrlRelativeToBase(item.href)}
            class={`nav-link ${isActive(item.href, currentPath) ? 'nav-link-active' : ''}`}
            title={item.description}
          >
            {item.title}
          </a>
        ))}
      </nav>
    </div>

    <!-- Right Section: Actions -->
    <div class="header-right">
      <!-- External Links -->
      <div class="external-links">
        <a
          href="https://github.com/block/docs-site-kickstarter"
          target="_blank"
          rel="noreferrer"
          class="external-link"
          title="View on GitHub"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>

      <ThemeToggle />
    </div>
  </div>
</header>

<style>
  .header-wrapper {
    position: sticky;
    top: 0;
    z-index: 50;
    width: 100%;
    background-color: hsl(var(--background) / 0.95);
    backdrop-filter: blur(8px);
  }

  @supports (backdrop-filter: blur(8px)) {
    .header-wrapper {
      background-color: hsl(var(--background) / 0.6);
    }
  }

  .header-container {
    max-width: 1800px; /* Increased from 1600px */
    margin: 0 auto;
    padding: 0 1.5rem; /* Increased padding */
    display: flex;
    height: 64px;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex: 1;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* Brand Styling */
  .brand-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .brand-link:hover {
    opacity: 0.8;
  }

  .brand-content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .brand-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    color: hsl(var(--primary));
    transition: color 0.2s ease;
  }

  .brand-link:hover .brand-icon {
    color: hsl(var(--accent));
  }

  .brand-text {
    font-weight: 700;
    font-size: 1.125rem;
    color: hsl(var(--foreground));
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: none;
    align-items: center;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .desktop-nav {
      display: flex;
    }
  }

  .nav-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--muted-foreground));
    position: relative;
    padding: 0.5rem 0;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: hsl(var(--foreground));
  }

  .nav-link-active {
    color: hsl(var(--foreground));
  }

  .nav-link-active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 2px;
    background: hsl(var(--primary));
    border-radius: 1px;
  }

  /* External Links */
  .external-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .external-link {
    padding: 0.5rem;
    color: hsl(var(--muted-foreground));
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
  }

  .external-link:hover {
    color: hsl(var(--foreground));
    background-color: hsl(var(--muted) / 0.5);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .header-container {
      padding: 0 1rem;
      gap: 1rem;
    }

    .header-left {
      gap: 1rem;
    }

    .brand-text {
      display: none;
    }

    .external-links {
      gap: 0.25rem;
    }
  }

  @media (max-width: 640px) {
    .header-container {
      padding: 0 0.75rem;
    }
  }
</style>
