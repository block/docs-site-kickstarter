---
interface Props {
  title?: string;
  tagline?: string;
  description?: string;
  variant?: 'default' | 'centered' | 'compact';
  className?: string;
}

const { 
  title = "Feature-rich layout that captures attention",
  tagline = "Bento grid section",
  description = "Add a concise value statement that highlights your product's key features and benefits in a visually dynamic grid. Focus on creating balanced content blocks while keeping it under 2-3 lines. Align with your grid layout structure.",
  variant = 'default',
  className = '',
} = Astro.props;
---

<section class={`bento-grid-section py-24 ${className}`}>
  <div class="container mx-auto px-6 max-w-7xl">
    <!-- Section Header -->
    <div class="flex flex-col items-center text-center mb-12 space-y-5">
      {tagline && (
        <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-muted text-muted-foreground border">
          {tagline}
        </div>
      )}
      
      {title && (
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight text-foreground max-w-2xl">
          {title}
        </h2>
      )}
      
      {description && (
        <p class="text-lg text-muted-foreground max-w-2xl leading-relaxed">
          {description}
        </p>
      )}
    </div>

    <!-- Bento Grid -->
    <div class="bento-grid">
      <slot />
    </div>
  </div>
</section>

<style>
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 1.5rem;
    max-width: 1280px;
    margin: 0 auto;
  }

  /* Default responsive grid layout */
  .bento-grid > :global(.bento-item) {
    background: hsl(var(--background));
    border: 1px solid hsl(var(--border));
    border-radius: 0.875rem;
    padding: 1.5rem;
    box-shadow: 
      0 1px 2px -1px rgba(0, 0, 0, 0.1),
      0 1px 3px 0 rgba(0, 0, 0, 0.1);
    transition: all 0.2s ease-in-out;
  }

  .bento-grid > :global(.bento-item:hover) {
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transform: translateY(-1px);
  }

  /* Grid item sizes */
  .bento-grid > :global(.bento-item.span-1) { grid-column: span 1; }
  .bento-grid > :global(.bento-item.span-2) { grid-column: span 2; }
  .bento-grid > :global(.bento-item.span-3) { grid-column: span 3; }
  .bento-grid > :global(.bento-item.span-4) { grid-column: span 4; }
  .bento-grid > :global(.bento-item.span-5) { grid-column: span 5; }
  .bento-grid > :global(.bento-item.span-6) { grid-column: span 6; }
  .bento-grid > :global(.bento-item.span-7) { grid-column: span 7; }
  .bento-grid > :global(.bento-item.span-8) { grid-column: span 8; }
  .bento-grid > :global(.bento-item.span-9) { grid-column: span 9; }
  .bento-grid > :global(.bento-item.span-10) { grid-column: span 10; }
  .bento-grid > :global(.bento-item.span-11) { grid-column: span 11; }
  .bento-grid > :global(.bento-item.span-12) { grid-column: span 12; }

  /* Row spans */
  .bento-grid > :global(.bento-item.row-span-1) { grid-row: span 1; }
  .bento-grid > :global(.bento-item.row-span-2) { grid-row: span 2; }
  .bento-grid > :global(.bento-item.row-span-3) { grid-row: span 3; }
  .bento-grid > :global(.bento-item.row-span-4) { grid-row: span 4; }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: repeat(8, 1fr);
    }
    
    .bento-grid > :global(.bento-item.lg\:span-4) { grid-column: span 4; }
    .bento-grid > :global(.bento-item.lg\:span-6) { grid-column: span 6; }
    .bento-grid > :global(.bento-item.lg\:span-8) { grid-column: span 8; }
  }

  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
    }
    
    .bento-grid > :global(.bento-item) {
      padding: 1rem;
    }
    
    .bento-grid > :global(.bento-item.md\:span-2) { grid-column: span 2; }
    .bento-grid > :global(.bento-item.md\:span-4) { grid-column: span 4; }
  }

  @media (max-width: 640px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .bento-grid > :global(.bento-item.sm\:span-1) { grid-column: span 1; }
    .bento-grid > :global(.bento-item.sm\:span-2) { grid-column: span 2; }
  }
</style>
