---
interface Link {
  title: string;
  href: string;
  external?: boolean;
}

interface FooterSection {
  title: string;
  links: Link[];
}

interface SocialLink {
  name: string;
  href: string;
  icon: string;
}

interface Props {
  logo?: string;
  logoAlt?: string;
  companyName?: string;
  description?: string;
  sections?: FooterSection[];
  socialLinks?: SocialLink[];
  copyright?: string;
  showNewsletter?: boolean;
  newsletterTitle?: string;
  newsletterDescription?: string;
  variant?: 'default' | 'minimal' | 'detailed';
  className?: string;
}

const { 
  logo,
  logoAlt = '',
  companyName = 'Your Company',
  description = 'Building the future of documentation with modern tools and beautiful design.',
  sections = [],
  socialLinks = [],
  copyright,
  showNewsletter = false,
  newsletterTitle = 'Stay updated',
  newsletterDescription = 'Get the latest updates and news delivered to your inbox.',
  variant = 'default',
  className = '',
} = Astro.props;

const currentYear = new Date().getFullYear();
const copyrightText = copyright || `Â© ${currentYear} ${companyName}. All rights reserved.`;
---

<footer class={`site-footer variant-${variant} ${className}`}>
  <div class="container mx-auto px-6">
    {variant === 'detailed' && (
      <div class="footer-main">
        <!-- Company Info -->
        <div class="footer-company">
          {logo && (
            <div class="footer-logo">
              <img src={logo} alt={logoAlt} />
            </div>
          )}
          
          <div class="footer-brand">
            <h3 class="company-name">{companyName}</h3>
            <p class="company-description">{description}</p>
          </div>
          
          {socialLinks.length > 0 && (
            <div class="social-links">
              {socialLinks.map((social) => (
                <a 
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="social-link"
                  aria-label={social.name}
                >
                  <Fragment set:html={social.icon} />
                </a>
              ))}
            </div>
          )}
        </div>
        
        <!-- Navigation Sections -->
        {sections.length > 0 && (
          <div class="footer-sections">
            {sections.map((section) => (
              <div class="footer-section">
                <h4 class="section-title">{section.title}</h4>
                <ul class="section-links horizontal">
                  {section.links.map((link) => (
                    <li>
                      <a 
                        href={link.href}
                        {...(link.external && { target: '_blank', rel: 'noopener noreferrer' })}
                        class="footer-link"
                      >
                        {link.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        )}
        
        <!-- Newsletter Signup -->
        {showNewsletter && (
          <div class="footer-newsletter">
            <h4 class="newsletter-title">{newsletterTitle}</h4>
            <p class="newsletter-description">{newsletterDescription}</p>
            <form class="newsletter-form">
              <input 
                type="email" 
                placeholder="Enter your email"
                class="newsletter-input"
                required
              />
              <button type="submit" class="newsletter-button">
                Subscribe
              </button>
            </form>
          </div>
        )}
      </div>
    )}
    
    {variant === 'default' && (
      <div class="footer-main">
        <div class="footer-brand-section">
          {logo && (
            <div class="footer-logo">
              <img src={logo} alt={logoAlt} />
            </div>
          )}
          <div>
            <h3 class="company-name">{companyName}</h3>
            <p class="company-description">{description}</p>
          </div>
        </div>
        
        {sections.length > 0 && (
          <div class="footer-sections">
            {sections.map((section) => (
              <div class="footer-section">
                <h4 class="section-title">{section.title}</h4>
                <ul class="section-links horizontal">
                  {section.links.map((link) => (
                    <li>
                      <a 
                        href={link.href}
                        {...(link.external && { target: '_blank', rel: 'noopener noreferrer' })}
                        class="footer-link"
                      >
                        {link.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        )}
      </div>
    )}
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-separator"></div>
      <div class="footer-bottom-content">
        <div class="copyright">
          {copyrightText}
        </div>
        
        {socialLinks.length > 0 && variant !== 'detailed' && (
          <div class="social-links">
            {socialLinks.map((social) => (
              <a 
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
                aria-label={social.name}
              >
                <Fragment set:html={social.icon} />
              </a>
            ))}
          </div>
        )}
        
        <!-- Custom slot for additional footer content -->
        <div class="footer-extra">
          <slot />
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: hsl(var(--background));
    border-top: 1px solid hsl(var(--border));
    margin-top: auto;
  }
  
  .site-footer.variant-minimal {
    padding: 2rem 0;
  }
  
  .site-footer.variant-default,
  .site-footer.variant-detailed {
    padding: 4rem 0 2rem;
  }
  
  /* Main Footer Content */
  .footer-main {
    display: grid;
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  .variant-detailed .footer-main {
    grid-template-columns: 1fr 2fr 1fr;
    gap: 4rem;
  }
  
  .variant-default .footer-main {
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
  }
  
  /* Company Section */
  .footer-company,
  .footer-brand-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .footer-logo img {
    height: 2rem;
    width: auto;
  }
  
  .company-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0;
  }
  
  .company-description {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    line-height: 1.5;
    margin: 0;
  }
  
  /* Navigation Sections */
  .footer-sections {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
  }
  
  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .section-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0;
  }
  
  .section-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .section-links.horizontal {
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0;
  }
  
  .section-links.horizontal li:not(:last-child)::after {
    content: " | ";
    color: hsl(var(--muted-foreground));
    margin: 0 0.5rem;
  }
  
  .footer-link {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .footer-link:hover {
    color: hsl(var(--foreground));
  }
  
  /* Newsletter Section */
  .footer-newsletter {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .newsletter-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0;
  }
  
  .newsletter-description {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    line-height: 1.5;
    margin: 0;
  }
  
  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }
  
  .newsletter-input {
    flex: 1;
    padding: 0.5rem 0.75rem;
    border: 1px solid hsl(var(--border));
    border-radius: 0.375rem;
    background: hsl(var(--background));
    color: hsl(var(--foreground));
    font-size: 0.875rem;
  }
  
  .newsletter-input:focus {
    outline: none;
    border-color: hsl(var(--ring));
    box-shadow: 0 0 0 2px hsl(var(--ring) / 0.2);
  }
  
  .newsletter-button {
    padding: 0.5rem 1rem;
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    border: none;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  
  .newsletter-button:hover {
    background: hsl(var(--primary) / 0.9);
  }
  
  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: hsl(var(--muted-foreground));
    transition: color 0.2s ease;
  }
  
  .social-link:hover {
    color: hsl(var(--foreground));
  }
  
  .social-link :global(svg) {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  /* Footer Bottom */
  .footer-bottom {
    margin-top: 2rem;
  }
  
  .footer-separator {
    height: 1px;
    background: hsl(var(--border));
    margin-bottom: 2rem;
  }
  
  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  
  .copyright {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }
  
  .footer-extra {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .variant-detailed .footer-main {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .variant-default .footer-main {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .footer-sections {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .site-footer.variant-default,
    .site-footer.variant-detailed {
      padding: 3rem 0 1.5rem;
    }
    
    .footer-main {
      gap: 2rem;
      margin-bottom: 2rem;
    }
    
    .footer-sections {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }
    
    .newsletter-form {
      flex-direction: column;
    }
    
    .newsletter-input {
      width: 100%;
    }
  }
  
  @media (max-width: 640px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
    
    .footer-brand-section {
      text-align: center;
    }
    
    .footer-company {
      text-align: center;
    }
    
    .social-links {
      justify-content: center;
    }
  }
  
  /* Minimal variant styles */
  .variant-minimal .footer-main {
    display: none;
  }
  
  .variant-minimal .footer-bottom {
    margin-top: 0;
  }
  
  .variant-minimal .footer-separator {
    display: none;
  }
</style>
