---
import { formatDate } from '../../components/blog/blogUtils';
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   altText: string;
   name: string;
   age: number;
}

interface BlogPost {
  title: string;
  author: string;
  date: string;
  excerpt: string;
  image?: string;
  tags?: string[];
  readTime?: string;
}

interface Props {
  title?: string;
  tagline?: string;
  description?: string;
  posts: BlogPost[];
  layout?: 'grid' | 'list' | 'featured';
  showExcerpts?: boolean;
  showTags?: boolean;
  showAuthors?: boolean;
  showReadTime?: boolean;
  className?: string;
}

const { 
  title = "Short and clear engaging headline for a blog",
  tagline = "Latest insights",
  description = "Add a concise value statement that captures reader interest and previews content value. Focus on benefits while keeping it under two lines.",
  posts,
  layout = 'grid',
  showExcerpts = true,
  showTags = true,
  showAuthors = true,
  showReadTime = true,
  className = '',
} = Astro.props;

const sectionClasses = [
  'blog-section',
  `layout-${layout}`,
  className
].filter(Boolean).join(' ');

// Set the postURL only if the post exists in Content Collections and has an ID; else set it to NO-OP; this is used in examples docs
const getPostURL = (post) => post.data.slug != null ? import.meta.env.BASE_URL + "blog/" + post.data.slug : "javascript:void(null);";
---

<section class={sectionClasses}>
  <div class="container mx-auto px-6 py-8">

    <!-- Blog Posts -->
    {posts.length > 0 && (
      <div class="blog-posts">
        {posts.map((post, index) => (

          <article class={`blog-post ${layout === 'featured' && index === 0 ? 'featured-post' : ''}`}>
            {post.image && (
              <div class="post-image">
                <a href={getPostURL(post)}>
                  <Image 
                    src={import.meta.env.BASE_URL + post.image}
                    alt={post.title}
                    width="100%"
                    height="100%"
                  />
                </a>
              </div>
            )}
            
            <div class="post-content">
              <div class="post-meta">

                {showTags && post.data.tags && (
                  post.data.tags.map((tag, index) => (
                    <span class="post-category">{tag}</span>
                  ))
                  
                )}
                
                <time class="post-date" datetime={post.data.date}>
                  {formatDate(post.data.date)}
                </time>
                
                {showReadTime && post.data.readTime && (
                  <span class="post-read-time">{post.data.readTime}</span>
                )}
              </div>
              
              <h3 class="post-title">
                <a href={getPostURL(post)}>{post.data.title}</a>
              </h3>
              
              {showExcerpts && post.data.excerpt && (
                <p class="post-excerpt">{post.data.excerpt}</p>
              )}
              
              <div class="post-footer">
                {showAuthors && post.data.author && (
                  <span class="post-author">By {post.data.author}</span>
                )}
                
                <a href={getPostURL(post)} class="post-link">
                  Read more
                  <svg class="link-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    )}
    
    <!-- Custom slot for additional content -->
    <div class="blog-extra">
      <slot />
    </div>
  </div>
</section>

<style>
  .blog-section {
    background: hsl(var(--background));
    color: hsl(var(--foreground));
  }
  
  /* Header Styles */
  .blog-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    margin-bottom: 4rem;
    max-width: 768px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .blog-tagline {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    background: hsl(var(--muted));
    color: hsl(var(--muted-foreground));
    border: 1px solid hsl(var(--border));
  }
  
  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: hsl(var(--foreground));
    margin: 0;
  }
  
  .blog-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: hsl(var(--muted-foreground));
    margin: 0;
  }
  
  /* Blog Posts Grid */
  .blog-posts {
    display: grid;
    gap: 2rem;
  }
  
  .layout-grid .blog-posts {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .layout-list .blog-posts {
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .layout-featured .blog-posts {
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  /* Blog Post Styles */
  .blog-post {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 0.75rem;
    overflow: hidden;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
  }
  
  .blog-post:hover {
    box-shadow: 
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transform: translateY(-2px);
  }
  
  .layout-list .blog-post {
    flex-direction: row;
    align-items: center;
  }
  
  .layout-featured .featured-post {
    grid-column: 1 / -1;
    flex-direction: row;
    align-items: center;
    padding: 2rem;
  }
  
  /* Post Image */
  .post-image {
    position: relative;
    overflow: hidden;
  }
  
  .layout-grid .post-image,
  .layout-featured .blog-post:not(.featured-post) .post-image {
    aspect-ratio: 16 / 9;
  }
  
  .layout-list .post-image,
  .layout-featured .featured-post .post-image {
    width: 300px;
    height: 200px;
    flex-shrink: 0;
  }
  
  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .post-image:hover img {
    transform: scale(1.05);
  }
  
  /* Post Content */
  .post-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .layout-featured .featured-post .post-content {
    padding: 0 0 0 2rem;
  }
  
  /* Post Meta */
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    flex-wrap: wrap;
  }
  
  .post-category {
    background: hsl(var(--primary) / 0.1);
    color: hsl(var(--primary));
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-weight: 500;
    font-size: 0.75rem;
  }
  
  .post-date,
  .post-read-time {
    font-size: 0.875rem;
  }
  
  /* Post Title */
  .post-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
  }
  
  .layout-featured .featured-post .post-title {
    font-size: 1.875rem;
  }
  
  .post-title a {
    color: hsl(var(--foreground));
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .post-title a:hover {
    color: hsl(var(--primary));
  }
  
  /* Post Excerpt */
  .post-excerpt {
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }
  
  /* Post Footer */
  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    font-size: 0.875rem;
  }
  
  .post-author {
    color: hsl(var(--muted-foreground));
  }
  
  .post-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: hsl(var(--primary));
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .post-link:hover {
    gap: 0.75rem;
  }
  
  .link-icon {
    width: 1rem;
    height: 1rem;
    transition: transform 0.2s ease;
  }
  
  .post-link:hover .link-icon {
    transform: translateX(2px);
  }
  
  /* Blog Extra */
  .blog-extra {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .layout-grid .blog-posts {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      max-width: 900px;
    }
  }
  
  @media (max-width: 768px) {
    .blog-title {
      font-size: 2rem;
    }
    
    .blog-description {
      font-size: 1rem;
    }
    
    .layout-grid .blog-posts {
      grid-template-columns: 1fr;
      max-width: 600px;
    }
    
    .layout-list .blog-post,
    .layout-featured .featured-post {
      flex-direction: column;
    }
    
    .layout-list .post-image,
    .layout-featured .featured-post .post-image {
      width: 100%;
      height: 200px;
    }
    
    .layout-featured .featured-post .post-content {
      padding: 1.5rem;
    }
    
    .layout-featured .featured-post .post-title {
      font-size: 1.5rem;
    }
    
    .post-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
  
  @media (max-width: 640px) {
    .blog-header {
      margin-bottom: 3rem;
    }
    
    .blog-title {
      font-size: 1.75rem;
    }
    
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
      padding-top: 3rem;
      padding-bottom: 3rem;
    }
  }
  
  /* Global slot content styling */
  .blog-extra :global(.blog-cta) {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .blog-extra :global(.blog-cta:hover) {
    background: hsl(var(--primary) / 0.9);
    transform: translateY(-1px);
  }
</style>
