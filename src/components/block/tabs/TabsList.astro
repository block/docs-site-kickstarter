---
import { cn } from "@/lib/utils";

export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<nav 
  role="tablist" 
  aria-orientation="horizontal" 
  class={cn(
    "flex items-center bg-gray-50 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700",
    className
  )}
>
  <slot />
</nav>
