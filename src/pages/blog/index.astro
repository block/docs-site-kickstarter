---
// src/pages/about.astro
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogSection from "@/components/block/BlogSection.astro"
import { getCollection } from "astro:content";
import CTASection from '@/components/block/CTASection.astro';
import { Newspaper } from '@lucide/astro';

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const title = "Blog";
const tagline = "Extra, Extra!"
const description = "All the news that's fit to read from the Block Open Source team";
---

<BaseLayout title={title} description="Thoughts from the project team">

  <CTASection
    title={title}
    tagline={tagline}
    taglineIcon={Newspaper}
    description={description}
  />

  <BlogSection
    title="Extra, Extra!"
    description="That's a low blow, Loblaw. Bob Loblaw Law Bomb."
    posts={posts}
    showExcerpts={true}
    showCategories={true}
    showAuthors={true}
    showReadTime={true}
    layout="list"
  />

</BaseLayout>