---
export interface Props {
  headline: string;
  description: string;
  primaryCTA: string;
  primaryCTALink: string;
  secondaryCTA?: string;
  secondaryCTALink?: string;
}
const { headline, description, primaryCTA, primaryCTALink, secondaryCTA, secondaryCTALink } = Astro.props;
import { buttonVariants } from "@/components/ui/button";
---

<div class="text-center space-y-8 animate-on-scroll">
  <h2 class="text-3xl font-bold tracking-tight">{headline}</h2>
  <p class="text-muted-foreground text-lg max-w-[600px] mx-auto">
    {description}
  </p>
  <div class="flex flex-wrap justify-center gap-4 mt-8">
    <a
      href={primaryCTALink}
      rel="noreferrer"
      class={buttonVariants({ size: "lg" }) + " transition-transform hover:scale-105"}
    >
      {primaryCTA}
    </a>
    {secondaryCTA && secondaryCTALink && (
      <a
        href={secondaryCTALink}
        target="_blank"
        rel="noreferrer"
        class={buttonVariants({ variant: "outline", size: "lg" }) + " transition-transform hover:scale-105"}
      >
        {secondaryCTA}
      </a>
    )}
  </div>
</div> 