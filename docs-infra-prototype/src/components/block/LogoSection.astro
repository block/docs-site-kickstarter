---
interface Logo {
  name: string;
  src: string;
  alt?: string;
  href?: string;
  width?: number;
  height?: number;
}

interface Props {
  title?: string;
  tagline?: string;
  description?: string;
  logos: Logo[];
  layout?: 'grid' | 'marquee' | 'centered';
  variant?: 'default' | 'grayscale' | 'bordered';
  columns?: 3 | 4 | 5 | 6;
  showNames?: boolean;
  autoplay?: boolean;
  className?: string;
}

const { 
  title = "Showcase that builds trust",
  tagline = "Trusted by companies",
  description = "Add logos of notable companies using your product. Include 4-6 recognizable brands in grayscale to maintain visual consistency. Ensure logos are properly scaled and aligned with equal spacing.",
  logos = [],
  layout = 'grid',
  variant = 'grayscale',
  columns = 5,
  showNames = false,
  autoplay = true,
  className = '',
} = Astro.props;

const sectionClasses = [
  'logo-section',
  `layout-${layout}`,
  `variant-${variant}`,
  `columns-${columns}`,
  className
].filter(Boolean).join(' ');
---

<section class={sectionClasses}>
  <div class="container mx-auto px-6 py-16 lg:py-24">
    <!-- Section Header -->
    <div class="logo-header">
      {tagline && (
        <div class="logo-tagline">
          {tagline}
        </div>
      )}
      
      {title && (
        <h2 class="logo-title">
          {title}
        </h2>
      )}
      
      {description && (
        <p class="logo-description">
          {description}
        </p>
      )}
    </div>

    <!-- Logo Display -->
    {logos.length > 0 && (
      <div class="logo-container">
        {layout === 'marquee' && (
          <div class="logo-marquee" data-autoplay={autoplay}>
            <div class="marquee-track">
              {[...logos, ...logos].map((logo, index) => (
                <div class="logo-item" key={`${logo.name}-${index}`}>
                  {logo.href ? (
                    <a 
                      href={logo.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="logo-link"
                      aria-label={`Visit ${logo.name}`}
                    >
                      <img 
                        src={logo.src} 
                        alt={logo.alt || logo.name}
                        width={logo.width}
                        height={logo.height}
                        class="logo-image"
                      />
                      {showNames && <span class="logo-name">{logo.name}</span>}
                    </a>
                  ) : (
                    <div class="logo-wrapper">
                      <img 
                        src={logo.src} 
                        alt={logo.alt || logo.name}
                        width={logo.width}
                        height={logo.height}
                        class="logo-image"
                      />
                      {showNames && <span class="logo-name">{logo.name}</span>}
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        )}
        
        {(layout === 'grid' || layout === 'centered') && (
          <div class="logo-grid">
            {logos.map((logo) => (
              <div class="logo-item">
                {logo.href ? (
                  <a 
                    href={logo.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="logo-link"
                    aria-label={`Visit ${logo.name}`}
                  >
                    <img 
                      src={logo.src} 
                      alt={logo.alt || logo.name}
                      width={logo.width}
                      height={logo.height}
                      class="logo-image"
                    />
                    {showNames && <span class="logo-name">{logo.name}</span>}
                  </a>
                ) : (
                  <div class="logo-wrapper">
                    <img 
                      src={logo.src} 
                      alt={logo.alt || logo.name}
                      width={logo.width}
                      height={logo.height}
                      class="logo-image"
                    />
                    {showNames && <span class="logo-name">{logo.name}</span>}
                  </div>
                )}
              </div>
            ))}
          </div>
        )}
      </div>
    )}
    
    <!-- Custom slot for additional content -->
    <div class="logo-extra">
      <slot />
    </div>
  </div>
</section>

<script>
  // Marquee animation
  document.addEventListener('DOMContentLoaded', function() {
    const marquees = document.querySelectorAll('.logo-marquee[data-autoplay="true"]');
    
    marquees.forEach(marquee => {
      const track = marquee.querySelector('.marquee-track');
      if (track) {
        // Pause animation on hover
        marquee.addEventListener('mouseenter', () => {
          track.style.animationPlayState = 'paused';
        });
        
        marquee.addEventListener('mouseleave', () => {
          track.style.animationPlayState = 'running';
        });
      }
    });
  });
</script>

<style>
  .logo-section {
    background: hsl(var(--background));
    color: hsl(var(--foreground));
  }
  
  /* Header Styles */
  .logo-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    margin-bottom: 4rem;
    max-width: 768px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .logo-tagline {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    background: hsl(var(--muted));
    color: hsl(var(--muted-foreground));
    border: 1px solid hsl(var(--border));
  }
  
  .logo-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: hsl(var(--foreground));
    margin: 0;
  }
  
  .logo-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: hsl(var(--muted-foreground));
    margin: 0;
  }
  
  /* Logo Container */
  .logo-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  /* Grid Layout */
  .logo-grid {
    display: grid;
    gap: 2rem;
    align-items: center;
    justify-items: center;
  }
  
  .layout-grid .logo-grid {
    grid-template-columns: repeat(var(--columns, 5), 1fr);
  }
  
  .layout-centered .logo-grid {
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    max-width: 800px;
    margin: 0 auto;
  }
  
  .columns-3 .logo-grid {
    --columns: 3;
  }
  
  .columns-4 .logo-grid {
    --columns: 4;
  }
  
  .columns-5 .logo-grid {
    --columns: 5;
  }
  
  .columns-6 .logo-grid {
    --columns: 6;
  }
  
  /* Marquee Layout */
  .logo-marquee {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
  }
  
  .marquee-track {
    display: inline-flex;
    align-items: center;
    gap: 4rem;
    animation: marquee 30s linear infinite;
  }
  
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  /* Logo Item Styles */
  .logo-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
  }
  
  .logo-link,
  .logo-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: inherit;
  }
  
  .logo-link:hover {
    transform: translateY(-2px);
  }
  
  /* Logo Image */
  .logo-image {
    max-width: 120px;
    max-height: 60px;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: all 0.2s ease;
  }
  
  .variant-grayscale .logo-image {
    filter: grayscale(100%) opacity(0.7);
  }
  
  .variant-grayscale .logo-item:hover .logo-image {
    filter: grayscale(0%) opacity(1);
  }
  
  .variant-bordered .logo-item {
    padding: 1.5rem;
    border: 1px solid hsl(var(--border));
    border-radius: 0.75rem;
    background: hsl(var(--card));
  }
  
  .variant-bordered .logo-item:hover {
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  /* Logo Name */
  .logo-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--muted-foreground));
    text-align: center;
  }
  
  /* Logo Extra */
  .logo-extra {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .columns-6 .logo-grid {
      --columns: 4;
    }
    
    .columns-5 .logo-grid {
      --columns: 4;
    }
    
    .columns-4 .logo-grid {
      --columns: 3;
    }
  }
  
  @media (max-width: 768px) {
    .logo-title {
      font-size: 2rem;
    }
    
    .logo-description {
      font-size: 1rem;
    }
    
    .logo-grid {
      gap: 1.5rem;
    }
    
    .columns-6 .logo-grid,
    .columns-5 .logo-grid,
    .columns-4 .logo-grid,
    .columns-3 .logo-grid {
      --columns: 2;
    }
    
    .logo-image {
      max-width: 100px;
      max-height: 50px;
    }
    
    .marquee-track {
      gap: 2rem;
    }
  }
  
  @media (max-width: 640px) {
    .logo-header {
      margin-bottom: 3rem;
    }
    
    .logo-title {
      font-size: 1.75rem;
    }
    
    .logo-grid {
      --columns: 2;
      gap: 1rem;
    }
    
    .variant-bordered .logo-item {
      padding: 1rem;
    }
    
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
      padding-top: 3rem;
      padding-bottom: 3rem;
    }
  }
  
  @media (max-width: 480px) {
    .logo-grid {
      --columns: 1;
    }
    
    .logo-image {
      max-width: 80px;
      max-height: 40px;
    }
  }
  
  /* Global slot content styling */
  .logo-extra :global(.logo-cta) {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .logo-extra :global(.logo-cta:hover) {
    background: hsl(var(--primary) / 0.9);
    transform: translateY(-1px);
  }
  
  .logo-extra :global(.logo-stats) {
    display: flex;
    gap: 3rem;
    align-items: center;
    justify-content: center;
    margin-top: 2rem;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }
  
  .logo-extra :global(.logo-stat) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }
  
  .logo-extra :global(.logo-stat-number) {
    font-size: 1.5rem;
    font-weight: 700;
    color: hsl(var(--foreground));
  }
  
  .logo-extra :global(.logo-stat-label) {
    font-size: 0.75rem;
    opacity: 0.8;
  }
</style>
