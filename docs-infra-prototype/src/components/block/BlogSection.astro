---
interface BlogPost {
  title: string;
  excerpt: string;
  date: string;
  author?: string;
  category?: string;
  image?: string;
  href: string;
  readTime?: string;
}

interface Props {
  title?: string;
  tagline?: string;
  description?: string;
  posts: BlogPost[];
  layout?: 'grid' | 'list' | 'featured';
  columns?: 2 | 3 | 4;
  showExcerpts?: boolean;
  showCategories?: boolean;
  showAuthors?: boolean;
  showReadTime?: boolean;
  className?: string;
}

const { 
  title = "Short and clear engaging headline for a blog",
  tagline = "Latest insights",
  description = "Add a concise value statement that captures reader interest and previews content value. Focus on benefits while keeping it under two lines.",
  posts = [],
  layout = 'grid',
  columns = 3,
  showExcerpts = true,
  showCategories = true,
  showAuthors = true,
  showReadTime = true,
  className = '',
} = Astro.props;

const sectionClasses = [
  'blog-section',
  `layout-${layout}`,
  `columns-${columns}`,
  className
].filter(Boolean).join(' ');

// Format date helper
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
};
---

<section class={sectionClasses}>
  <div class="container mx-auto px-6 py-16 lg:py-24">
    <!-- Section Header -->
    <div class="blog-header">
      {tagline && (
        <div class="blog-tagline">
          {tagline}
        </div>
      )}
      
      {title && (
        <h2 class="blog-title">
          {title}
        </h2>
      )}
      
      {description && (
        <p class="blog-description">
          {description}
        </p>
      )}
    </div>

    <!-- Blog Posts -->
    {posts.length > 0 && (
      <div class="blog-posts">
        {posts.map((post, index) => (
          <article class={`blog-post ${layout === 'featured' && index === 0 ? 'featured-post' : ''}`}>
            {post.image && (
              <div class="post-image">
                <a href={post.href}>
                  <img src={post.image} alt={post.title} />
                </a>
              </div>
            )}
            
            <div class="post-content">
              <div class="post-meta">
                {showCategories && post.category && (
                  <span class="post-category">{post.category}</span>
                )}
                
                <time class="post-date" datetime={post.date}>
                  {formatDate(post.date)}
                </time>
                
                {showReadTime && post.readTime && (
                  <span class="post-read-time">{post.readTime}</span>
                )}
              </div>
              
              <h3 class="post-title">
                <a href={post.href}>{post.title}</a>
              </h3>
              
              {showExcerpts && post.excerpt && (
                <p class="post-excerpt">{post.excerpt}</p>
              )}
              
              <div class="post-footer">
                {showAuthors && post.author && (
                  <span class="post-author">By {post.author}</span>
                )}
                
                <a href={post.href} class="post-link">
                  Read more
                  <svg class="link-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    )}
    
    <!-- Custom slot for additional content -->
    <div class="blog-extra">
      <slot />
    </div>
  </div>
</section>

<style>
  .blog-section {
    background: hsl(var(--background));
    color: hsl(var(--foreground));
  }
  
  /* Header Styles */
  .blog-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    margin-bottom: 4rem;
    max-width: 768px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .blog-tagline {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    background: hsl(var(--muted));
    color: hsl(var(--muted-foreground));
    border: 1px solid hsl(var(--border));
  }
  
  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: hsl(var(--foreground));
    margin: 0;
  }
  
  .blog-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: hsl(var(--muted-foreground));
    margin: 0;
  }
  
  /* Blog Posts Grid */
  .blog-posts {
    display: grid;
    gap: 2rem;
  }
  
  .layout-grid .blog-posts {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  .layout-grid.columns-2 .blog-posts {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .layout-grid.columns-3 .blog-posts {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .layout-grid.columns-4 .blog-posts {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .layout-list .blog-posts {
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  .layout-featured .blog-posts {
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  /* Blog Post Styles */
  .blog-post {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 0.75rem;
    overflow: hidden;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
  }
  
  .blog-post:hover {
    box-shadow: 
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transform: translateY(-2px);
  }
  
  .layout-list .blog-post {
    flex-direction: row;
    align-items: center;
  }
  
  .layout-featured .featured-post {
    grid-column: 1 / -1;
    flex-direction: row;
    align-items: center;
    padding: 2rem;
  }
  
  /* Post Image */
  .post-image {
    position: relative;
    overflow: hidden;
  }
  
  .layout-grid .post-image,
  .layout-featured .blog-post:not(.featured-post) .post-image {
    aspect-ratio: 16 / 9;
  }
  
  .layout-list .post-image,
  .layout-featured .featured-post .post-image {
    width: 300px;
    height: 200px;
    flex-shrink: 0;
  }
  
  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .post-image:hover img {
    transform: scale(1.05);
  }
  
  /* Post Content */
  .post-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .layout-featured .featured-post .post-content {
    padding: 0 0 0 2rem;
  }
  
  /* Post Meta */
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    flex-wrap: wrap;
  }
  
  .post-category {
    background: hsl(var(--primary) / 0.1);
    color: hsl(var(--primary));
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-weight: 500;
    font-size: 0.75rem;
  }
  
  .post-date,
  .post-read-time {
    font-size: 0.875rem;
  }
  
  /* Post Title */
  .post-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
  }
  
  .layout-featured .featured-post .post-title {
    font-size: 1.875rem;
  }
  
  .post-title a {
    color: hsl(var(--foreground));
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .post-title a:hover {
    color: hsl(var(--primary));
  }
  
  /* Post Excerpt */
  .post-excerpt {
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }
  
  /* Post Footer */
  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    font-size: 0.875rem;
  }
  
  .post-author {
    color: hsl(var(--muted-foreground));
  }
  
  .post-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: hsl(var(--primary));
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .post-link:hover {
    gap: 0.75rem;
  }
  
  .link-icon {
    width: 1rem;
    height: 1rem;
    transition: transform 0.2s ease;
  }
  
  .post-link:hover .link-icon {
    transform: translateX(2px);
  }
  
  /* Blog Extra */
  .blog-extra {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .layout-grid.columns-4 .blog-posts {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .layout-grid.columns-3 .blog-posts {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .blog-title {
      font-size: 2rem;
    }
    
    .blog-description {
      font-size: 1rem;
    }
    
    .layout-grid .blog-posts,
    .layout-list .blog-posts {
      grid-template-columns: 1fr;
    }
    
    .layout-list .blog-post,
    .layout-featured .featured-post {
      flex-direction: column;
    }
    
    .layout-list .post-image,
    .layout-featured .featured-post .post-image {
      width: 100%;
      height: 200px;
    }
    
    .layout-featured .featured-post .post-content {
      padding: 1.5rem;
    }
    
    .layout-featured .featured-post .post-title {
      font-size: 1.5rem;
    }
    
    .post-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
  
  @media (max-width: 640px) {
    .blog-header {
      margin-bottom: 3rem;
    }
    
    .blog-title {
      font-size: 1.75rem;
    }
    
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
      padding-top: 3rem;
      padding-bottom: 3rem;
    }
  }
  
  /* Global slot content styling */
  .blog-extra :global(.blog-cta) {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .blog-extra :global(.blog-cta:hover) {
    background: hsl(var(--primary) / 0.9);
    transform: translateY(-1px);
  }
</style>
